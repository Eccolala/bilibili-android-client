<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hotbitmapgg.bilibili.module.Auth.VerifyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_verify"
            android:layout_marginLeft="4dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:src="@color/colorAccent"/>

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/pg_loading"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateTint="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="34dp"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:text="换一张"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@+id/iv_verify"
            android:background="@null"/>

        <EditText
            android:id="@+id/et_verify"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:hint="请输入图片中的内容"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/iv_verify"
            android:layout_alignLeft="@+id/iv_verify"/>

    </RelativeLayout>

</FrameLayout>
